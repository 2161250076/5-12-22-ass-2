n=int(input('enter how many numbers you want:'))
l=int(input('enter the largest number:'))
s=int(input('enter the smallest number:'))
largest=l
i=1
while i<n:
    l=int(input('enter any number:'))
    if l>largest:
        largest=l
        i=i+1
    print('the largest number is',l)    
smallest=s
i=1
while i>n:
     s=int(input('enter any number:'))
    if s<smallest:
        smallest=1
            i=i-1
        print('the smallest number is',s) 
        diff=l-s
        print('the difference is',diff)
